{
    "rules": {
        ".read": "auth != null",
        ".write": "auth != null && !data.exists()",

        "posts": {
            "$post-id": {
                ".write": "auth != null && (!data.exists() || data.child('author').val() === auth.uid)",

                ".indexOn": "lastActivity",
                "lastActivity": {
                    ".write": "auth != null",
                    ".validate": "newData.val() >= now"
                }
            }
        },
        "comments-to": {
            "$post-id": {
                "$comment-id": {
                    ".write": "auth != null && (!data.exists() || data.child('author').val() === auth.uid)"
                }
            }
        },
        "likes-to": {
            "$post-or-comment-id": {
                "$like-id": {
                    ".write": "auth != null && !data.exists()"
                }
            }
        },

        "users": {
            "$uid": {
                ".write": "$uid === auth.uid"
            }
        }
    }
}
